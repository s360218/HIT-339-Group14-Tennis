@model tennis.Models.Schedule

@{
    ViewData["Title"] = "Schedule Details";
}

<h1>Schedule Details</h1>

<div>
    <h4>Schedule</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Model.Location
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToString("MM/dd/yyyy")
        </dd>
        <dt class="col-sm-2">
            Coach
        </dt>
        <dd class="col-sm-10">
            @Model.Coach?.FirstName @Model.Coach?.LastName
        </dd>
    </dl>
</div>

<h4>Enrolled Members</h4>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var memberSchedule in Model.MemberSchedules)
        {
            <tr>
                <td>@memberSchedule.Member?.FirstName</td>
                <td>@memberSchedule.Member?.LastName</td>
                <td>@memberSchedule.Member?.Email</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.ScheduleId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
